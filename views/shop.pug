extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
     main
            if prods.length > 0 
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSFIflSF17tp5n2Nv41JTwKHL8Fp2mPBHiZpidBAk7BYs3cEAj7&s", alt="A book")
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting thing!
                            .card__actions 
                                button.btn Add to Cart
            else 
                h1 No products